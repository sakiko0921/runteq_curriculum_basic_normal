<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <form>
        <div class="input-group mb-3"><input class="form-control" placeholder="検索ワード" type="search"/>
          <div class="input-group-append"><input type="submit" value="検索" class="btn btn-primary"/></div>
        </div>
      </form>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @boards.present? %>
          <% @boards.each do |board| %>
            <%= render partial: 'boards/board', locals: { board: board } %>
          <% end %>
          <div class="col-12">
            <%= paginate @boards, theme: 'bootstrap-5' %>
          </div>
        <% else %>
          <div class="mb-3"><%= t('.no_boards') %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>