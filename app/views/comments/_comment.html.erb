<!-- コメントエリア -->
<div class="row">
  <div class="col-lg-8 offset-lg-2">
    <!-- 表示されているコメントのIDが入るように調整してください -->
    <tr id="comment-<%= comment.id %>">
      <td style="width: 60px">
        <%= image_tag "sample", class: "rounded-circle", width: "50", height: "50" %>
      </td>
      <td>
        <h3 class="small"><%= comment.user.decorate.full_name %></h3>
        <%= simple_format(comment.body) %>
      </td>
        <td class="action">
          <ul class="list-inline justify-content-center" style="float: right;">
          <% if current_user.own?(comment) %>
            <li class="list-inline-item">
              <%= link_to "#", class: 'edit-comment-link' do %>
                <i class='bi bi-pencil-fill'></i>
              <% end %>
            </li>
            <li class="list-inline-item">
              <%= link_to comment_path(comment), class: 'delete-comment-link', data: { turbo_method: :delete, turbo_confirm: t('boards.board.confirm') } do %>
                <i class="bi bi-trash-fill"></i>
              <% end %>
            </li>
          <% end %>
          </ul>
        </td>
    </tr>
  </div>
</div>